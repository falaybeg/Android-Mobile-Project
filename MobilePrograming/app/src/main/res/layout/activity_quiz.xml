<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mehmethan.denemelogin.QuizActivity">


    <Button
        android:id="@+id/A2"
        android:layout_width="103dp"
        android:layout_height="41dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="22dp"
        android:background="?android:attr/colorPressedHighlight"
        android:text="Adapazarı"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <Button
        android:id="@+id/B2"
        android:layout_width="103dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="25dp"
        android:background="?android:attr/colorPressedHighlight"
        android:text="Serdivan"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintLeft_toRightOf="@+id/A2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <Button
        android:id="@+id/C3"
        android:layout_width="103dp"
        android:layout_height="41dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="13dp"
        android:background="@android:color/holo_orange_light"
        android:text="Karasu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/A2" />

    <Button
        android:id="@+id/D4"
        android:layout_width="103dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="13dp"
        android:background="@android:color/holo_orange_light"
        android:text="Sapanca"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintLeft_toRightOf="@+id/C3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B2" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="Soru 2: "
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/C1" />

    <Button
        android:id="@+id/A1"
        android:layout_width="103dp"
        android:layout_height="41dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="17dp"
        android:background="?android:attr/colorPressedHighlight"
        android:text="İstanbul"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/B1"
        android:layout_width="103dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="?android:attr/colorPressedHighlight"
        android:text="ADANA"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintLeft_toRightOf="@+id/A1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/C1"
        android:layout_width="103dp"
        android:layout_height="41dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/holo_orange_light"
        android:text="ankara"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/A1" />

    <Button
        android:id="@+id/D1"
        android:layout_width="103dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/holo_orange_light"
        android:text="Konya"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintLeft_toRightOf="@+id/C1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B1" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="346dp"
        android:layout_height="102dp"
        app:srcCompat="@drawable/quiztime"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="25dp"
        android:text=" Türkiyenin başkenti neresidir ?"
        android:textSize="17sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView18"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:text="Sakarya'nın merkez ilçesi hangisidir?"
        android:textSize="17sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/D1" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:text="Soru 1:"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

</android.support.constraint.ConstraintLayout>
